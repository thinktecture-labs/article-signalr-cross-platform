@inherits LayoutComponentBase
@inject Sotsera.Blazor.Oidc.IUserManager UserManager

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu"></MatIconButton>
                <MatAppBarTitle>SignalR Sample Tic Tac Toe</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <Login />
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
 
    <MatAppBarContent>
        @if (!String.IsNullOrWhiteSpace(UserManager?.UserState?.AccessToken))
            {
                @Body                
            }
    </MatAppBarContent>
</MatAppBarContainer>