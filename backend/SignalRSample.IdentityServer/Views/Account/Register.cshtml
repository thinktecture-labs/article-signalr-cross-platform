@model SignalRSample.IdentityServer.ViewModel.Register.RegisterViewModel

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div class="login-box">
        <h1>Registrierung</h1>
        <div class="form-input-field">
            <div class="textbox">
                <input placeholder="Username" asp-for="UserName" autofocus>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-input-field">
            <div class="textbox">
                <input type="email" placeholder="E-Mail" asp-for="Email" autofocus>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-input-field">
            <div class="textbox">
                <input type="password" placeholder="Password" asp-for="Password" autocomplete="off">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-input-field">
            <div class="textbox">
                <input type="password" placeholder="Confirm password" asp-for="ConfirmPassword" autocomplete="off">
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <!--<div asp-validation-summary="All" class="text-danger"></div>-->
        <div class="form-group">
            <button class="btn" name="button" value="login">Anmelden</button>
            <button class="btn" name="button" value="register" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register</button>
        </div>
    </div>
</form>