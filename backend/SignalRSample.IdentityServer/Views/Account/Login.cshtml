<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post">
    <div class="login-box">
        <h1>Anmeldung</h1>
        <input type="hidden" asp-for="ReturnUrl"/>
        <div class="textbox">
            <input placeholder="Username" asp-for="Username" autofocus>
        </div>
        <div class="textbox">
            <input type="password" placeholder="Password" asp-for="Password" autocomplete="off">
        </div>
        <div class="form-group">
            <button class="btn" name="button" value="login">Anmelden</button>
            <a class="btn" asp-action="Register" asp-route-returnurl="@Model.ReturnUrl">Register</a>
        </div>
    </div>
</form>